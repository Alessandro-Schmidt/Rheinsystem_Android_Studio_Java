<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="1920dp"
    android:layout_height="match_parent"
    android:background="#00FFFFFF"
    android:backgroundTint="#00FFFFFF"
    tools:context=".MainActivity">
    <!--
        This is the main page of our APP.
        We have the following elements:
        Images:
            Rheinsharing Logo;
            Background image;
        ImageButtons:
            videoBtn;
            Uber uns (about us Btn);
            Wasserkraft (hydraulic energy);
            Prototyp (prototype)
            Kraftwerk (electric central)
            Projekte (Projects)
            Quiz
        Layout:
            Linear Layout:
                Linear layout where all 6 buttons are placed (easier to place them on screen)
    -->
    <ImageView
        android:id="@+id/background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/background"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/background_rs_kleiner"
        tools:ignore="MissingConstraints,ImageContrastCheck"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />


    <!--
        Logos:
    -->


    <ImageView
        android:id="@+id/logo_Rhein"
        android:layout_width="433dp"
        android:layout_height="wrap_content"
        android:contentDescription="@string/logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/background"
        app:layout_constraintHorizontal_bias="0.162"
        app:layout_constraintStart_toStartOf="@+id/background"
        app:layout_constraintTop_toTopOf="@+id/background"
        app:layout_constraintVertical_bias="0.709"
        app:srcCompat="@drawable/def_rhein"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/logo_ford"
        android:layout_width="433dp"
        android:layout_height="277dp"
        android:contentDescription="@string/logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/background"
        app:layout_constraintHorizontal_bias="0.162"
        app:layout_constraintStart_toStartOf="@+id/background"
        app:layout_constraintTop_toTopOf="@+id/background"
        app:layout_constraintVertical_bias="0.07"
        app:srcCompat="@drawable/ford_logo"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="660dp"
        android:layout_marginStart="84dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/logo_Rhein"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.501"
        app:layout_editor_absoluteX="900dp"
        app:layout_editor_absoluteY="100dp">

        <ImageButton
            android:id="@+id/ico_btn_uberuns"
            android:layout_width="wrap_content"
            android:layout_height="110dp"
            android:background="#00FFFFFF"
            android:clickable="true"
            android:focusable="true"
            android:scaleType="fitStart"
            android:src="@drawable/button_uberuns"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/ico_btn_wasserkraft"
            android:layout_width="wrap_content"
            android:layout_height="110dp"
            android:background="#00FFFFFF"
            android:clickable="true"
            android:focusable="true"
            android:scaleType="fitStart"
            android:src="@drawable/button_wasserkraft"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/ico_btn_prototyp"
            android:layout_width="wrap_content"
            android:layout_height="110dp"
            android:background="#00FFFFFF"
            android:clickable="true"
            android:focusable="true"
            android:scaleType="fitStart"
            android:src="@drawable/button_prototyp"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/ico_btn_kraftwerk"
            android:layout_width="wrap_content"
            android:layout_height="110dp"
            android:background="#00FFFFFF"
            android:clickable="true"
            android:focusable="true"
            android:scaleType="fitStart"
            android:src="@drawable/button_kraftwerk"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/ico_btn_projekte"
            android:layout_width="wrap_content"
            android:layout_height="110dp"
            android:background="#00FFFFFF"
            android:clickable="true"
            android:focusable="true"
            android:scaleType="fitStart"
            android:src="@drawable/button_projekte"
            tools:ignore="SpeakableTextPresentCheck" />


        <ImageButton
            android:id="@+id/ico_btn_quiz"
            android:layout_width="wrap_content"
            android:layout_height="110dp"
            android:background="#00FFFFFF"
            android:clickable="true"
            android:focusable="true"
            android:scaleType="fitStart"
            android:src="@drawable/button_quiz"
            tools:ignore="SpeakableTextPresentCheck" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/videobtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginTop="48dp"
        android:background="#00FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/videobtn"
        tools:ignore="SpeakableTextPresentCheck" />


    <!--
        Partners:
    -->

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="1320dp"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/rheinpartners"
        android:scaleType="fitStart"
        android:layout_marginTop="398dp"
        app:layout_editor_absoluteX="-25dp"
        tools:layout_editor_absoluteY="398dp"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>